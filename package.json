{
  "name": "terminal-ide",
  "version": "0.1.0",
  "description": "Terminal-First IDE Orchestrator with Git worktree isolation",
  "author": "JoshuaLeonard",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "build:all": "npm run build:main && npm run build:preload && npm run build:renderer",
    "start": "npm run build:all && electron .",
    "postinstall": "electron-rebuild -f -w node-pty",
    "pack": "npm run build:all && electron-builder --dir",
    "dist": "npm run build:all && electron-builder",
    "release": "npm run build:all && electron-builder --publish always",
    "release:draft": "npm run build:all && electron-builder --publish onTagOrDraft"
  },
  "build": {
    "appId": "com.joshuaLeonard.terminal-ide",
    "productName": "Terminal IDE",
    "directories": {
      "output": "C:/temp/terminal-ide-release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "JoshLeonard",
      "repo": "agent-cli-ide"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "chrome-remote-interface": "^0.33.3",
    "electron-updater": "^6.7.3",
    "monaco-editor": "^0.45.0",
    "node-pty": "^1.0.0",
    "uuid": "^9.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/chrome-remote-interface": "^0.33.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vscode/debugprotocol": "^1.68.0",
    "electron": "^28.3.3",
    "electron-builder": "^26.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  }
}
